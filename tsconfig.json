{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "~/*": ["src/*", "dist/*"]
    },
    "lib": ["es2019.array"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "strictNullChecks": true
  },
  "include": ["src/**/*"]
}
